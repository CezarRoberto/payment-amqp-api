{
  "env": {
      "es2021": true,
      "node": true,
      "jest": true
  },
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base",
    "prettier",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "project": "./tsconfig.json"
  },
  "plugins": [
    "import",
    "import-helpers",
    "promise",
    "prettier",
    "jest"
  ],
  "rules": {
    "import/no-unresolved": [
      "error", {
        "ignore": [
          "^@application",
          "^@domain",
          "^@infrastructure",
          "^@main"
        ]
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.spec.ts",
          "src/infrastructure/database/Prisma.context.ts",
          "**/*.e2e-spec.ts",
          "jest.config.js"
        ]
      }
    ],
    "import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "always",
        "groups": [
          "/^@nestjs/",
          "/^@application/",
          "/^@domain/",
          "/^@infrastructure/",
          "/^@main/",
          "/^test/",
          "module",
          ["parent", "sibling", "index"]
        ],
        "alphabetize": {
          "order": "asc",
          "ignoreCase": true
        }
      }
    ],
    "import/prefer-default-export": "off",
    "class-methods-use-this": "off"
  },
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"]
    },
    "import/resolver": {
      "typescript": {}
    }
  }
}
